<%= simple_form_for(pet) do |f| %>
  <%= f.input :name %>
  <%= f.input :species %>
  <%= f.input :color %>
  <%= f.input :found_on %>
  <%= f.input :address %>
  <%# <%= f.input :image %>
  <%= f.simple_fields_for :image do |af| %>
        <%= af.input :photo, as: :file, label: :image, required: true, id: :image %>
      <% end %>
  <%= f.submit class: 'btn btn-success mb-5'%>
<% end %>
